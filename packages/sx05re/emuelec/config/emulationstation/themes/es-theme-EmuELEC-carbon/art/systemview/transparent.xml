<?xml version="1.0" encoding="UTF-8"?>
<theme>
  <formatVersion>7</formatVersion>
  <view name="system">
    <carousel name="systemcarousel">
      <color>FAFAFF00</color>
      <colorEnd>FAFAFF00</colorEnd>
      <systemInfoDelay>700</systemInfoDelay>
      <size>1 0.2325</size>
      <zIndex>20</zIndex>
      <pos>0 0.39</pos>
      <size>1 0.3925</size>
      <origin>0 0</origin>
      <logoPos>-1 0.02</logoPos>
    </carousel>

    <image name="logo">
      <!-- if system2 exists, take this version -->
      <path>./art/logos/${system.theme}2.svg</path>
      <reflexion>0.16 0.0</reflexion>
      <reflexionOnFrame>true</reflexionOnFrame>
    </image>
    <image name="CenterFade" extra="true">
      <tile>false</tile>
      <pos>0.5 0.5</pos>
      <size>1 0.5</size>      
      <origin>0.5 0.5</origin>
      <path>./../centerfade.png</path>
      <color>${centerFadeColor}</color>
      <zIndex>12</zIndex>
    </image>
    <text name="systemInfo">
      <pos>0 0.66</pos>
      <size>1 0.25</size>
      <backgroundColor>0000FF00</backgroundColor>
      <color>${systemInfoColor}</color>
      <glowColor>${glowColor}</glowColor>
      <glowSize>2</glowSize>
      <reflexion>0.20 0.0</reflexion>
    </text>
    <image name="carousel-inner" extra="true">
      <visible>false</visible>
    </image>
    <image name="carousel-shadow" extra="true">
      <visible>false</visible>
    </image>
  </view>
</theme>
